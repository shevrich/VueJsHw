<div class="container" id="div" style="margin-top: 40px;">
    <button class="btn btn-primary" v-on:click="showModal">Add Person</button>

    <table class="table table-bordered table-hover table-striped">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Cars</th>
        </tr>

        <template v-for="person in people">
            <tr>
                <td>{{person.firstName}}</td>
                <td>{{person.lastName}}</td>
                <td>{{person.age}}</td>
                <td>
                    <div class="row">
                        <div class="col-md-2">
                            <button class="btn btn-warning" v-on:click="viewCars(person)">View Cars</button>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-success" v-on:click="addCar(person)">Add Car</button>
                        </div>
                    </div>
                </td>
            </tr>
        </template>
    </table>

    <table v-if="carshasvalue"  class="table table-bordered table-hover table-striped">
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
        </tr>
        
        <template v-for="car in cars">
            <tr>
                <td>{{car.make}}</td>
                <td>{{car.model}}</td>
                <td>{{car.year}}</td>
            </tr>
        </template>

    </table>

    <div class="modal fade person-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Add Person</h4>
                </div>
                <div class="modal-body">
                    <input type="text" class="form-control" placeholder="First Name" v-model="newPerson.FirstName" />
                    <br />
                    <input type="text" class="form-control" placeholder="Last Name" v-model="newPerson.LastName" />
                    <br />
                    <input type="text" class="form-control" placeholder="Age" v-model="newPerson.Age" />
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" v-on:click="savePerson">Add Person</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <div class="modal fade car-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Add Person</h4>
                </div>
                <div class="modal-body">
                    <input type="text" class="form-control" placeholder="Make" v-model="newCar.Make" />
                    <br />
                    <input type="text" class="form-control" placeholder="Model" v-model="newCar.Model" />
                    <br />
                    <input type="text" class="form-control" placeholder="Model" v-model="newCar.Year" />
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" v-on:click="saveCar">Add Car</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

</div>



@section scripts{
    <script src="/Scripts/vue.min.js"></script>
    <script src="/Scripts/index.js"></script>
}